<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Updated header to outdoor theme with location focus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_background_transparent"
                    android:src="@drawable/ic_back"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Explore Routes"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/map_view_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_background_transparent"
                    android:src="@drawable/ic_map"
                    app:tint="@android:color/white" />

            </LinearLayout>


            <!-- Enhanced Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#666666" />

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search trails, routes, or destinations..."
                    android:textColor="#2C2C2C"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/clear_search_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@null"
                    android:src="@drawable/ic_clear"
                    app:tint="#666666"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/filter_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_filter"
                    app:tint="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- Added comprehensive filter system with activity dropdown and advanced filters -->
        <!-- Activity Type Dropdown and Advanced Filters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- Activity Type Dropdown and Filter Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Activity Type Dropdown -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_dropdown_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:id="@+id/activity_dropdown_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/selected_activity_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_hiking"
                            app:tint="#059669" />

                        <TextView
                            android:id="@+id/selected_activity_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Hiking"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_drop_down"
                            app:tint="#666666" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Advanced Filter Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/advanced_filter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#059669">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_tune"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Filters"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Advanced Filter Panel (Initially Hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/advanced_filter_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Difficulty Filter -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Difficulty Level"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Easy Difficulty -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/difficulty_easy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#E8F5E8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Easy"
                                    android:textColor="#4CAF50"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground" />

                            </androidx.cardview.widget.CardView>

                            <!-- Moderate Difficulty -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/difficulty_moderate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#FFF3E0">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Moderate"
                                    android:textColor="#FF9800"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground" />

                            </androidx.cardview.widget.CardView>

                            <!-- Hard Difficulty -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/difficulty_hard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#FFEBEE">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hard"
                                    android:textColor="#F44336"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Duration Filter -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Short Duration -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/duration_short"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Less than 1h"
                                        android:textColor="#2C2C2C"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Short"
                                        android:textColor="#666666"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <!-- Medium Duration -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/duration_medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1-3 hours"
                                        android:textColor="#2C2C2C"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Medium"
                                        android:textColor="#666666"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <!-- Long Duration -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/duration_long"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="1dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:background="?android:attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3+ hours"
                                        android:textColor="#2C2C2C"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Long"
                                        android:textColor="#666666"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Filter Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/clear_filters_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear All"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:padding="12dp"
                            android:layout_marginEnd="16dp"
                            android:background="?android:attr/selectableItemBackground" />

                        <Button
                            android:id="@+id/apply_filters_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Apply Filters"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_outdoor_primary"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Active Filter Chips -->
            <HorizontalScrollView
                android:id="@+id/active_filters_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/active_filters_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Active filter chips will be added programmatically -->

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <!-- Map Fragment -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/map_container">
            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</ScrollView>