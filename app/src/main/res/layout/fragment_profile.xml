<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header">

    <!-- Top Section -->
    <RelativeLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_header">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:fontFamily="@font/segoe_ui_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Manage your account settings"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/seg_ui_semibold" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Scrollable Bottom Section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_section"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_person"
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="2dp" />

                    <ImageView
                        android:id="@+id/camera_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignEnd="@id/profile_image"
                        android:layout_alignBottom="@id/profile_image"
                        android:background="@drawable/circle_background"
                        android:padding="4dp"
                        android:src="@drawable/ic_camera"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/profile_image"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:textColor="#2C2C2C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="loadingmail"
                            android:fontFamily="@font/segoe_ui_regular"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <!-- Statistics Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/steps_today"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2,345"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#4CAF50"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Today"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/total_steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45,678"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#2196F3"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/days_active"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#FF9800"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Days Active"
                                    android:fontFamily="@font/segoe_ui_regular"
                                    android:textColor="#999999"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/edit_profile_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_background_light"
                        android:src="@drawable/ic_edit"
                        app:tint="#666666" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step Progress Section with CustomView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Step Progress"
                            android:fontFamily="@font/segoe_ui_bold"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/level_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 5"
                            android:fontFamily="@font/segoe_ui_regular"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Custom Circular Progress -->
                    <com.example.signinui.StepProgressView
                        android:id="@+id/custom_step_progress"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:progressColor="#4CAF50"
                        app:backgroundColor="#E0E0E0"
                        app:textColor="#2C2C2C"
                        app:strokeWidth="20dp"
                        android:layout_marginTop="16dp" />

                    <!-- Extra Stats -->
                    <TextView
                        android:id="@+id/current_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="12,345"
                        android:textSize="16sp"
                        android:textColor="#2C2C2C"
                        android:fontFamily="@font/segoe_ui_regular" />

                    <TextView
                        android:id="@+id/target_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15,000"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/segoe_ui_regular" />

                    <TextView
                        android:id="@+id/steps_to_next_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="2,655 steps to next level"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        android:fontFamily="@font/segoe_ui_regular" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Settings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Account Settings Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:text="Account Settings"
                        android:fontFamily="@font/segoe_ui_regular"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Personal Info -->
                    <LinearLayout
                        android:id="@+id/personal_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Personal Information"
                            android:fontFamily="@font/seg_ui_semibold"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="#EEEEEE" />

                    <!-- My Routes -->
                    <LinearLayout
                        android:id="@+id/notifications_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_route"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="My Routes"
                            android:fontFamily="@font/seg_ui_semibold"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/my_routes_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                    <!-- App Settings Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:text="App Settings"
                        android:fontFamily="@font/seg_ui_semibold"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Support Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F9FA"
                        android:padding="12dp"
                        android:text="Support"
                        android:fontFamily="@font/seg_ui_semibold"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Help -->
                    <LinearLayout
                        android:id="@+id/help_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Help Center"
                            android:fontFamily="@font/seg_ui_semibold"
                            android:textColor="#2C2C2C"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="#EEEEEE" />

                    <!-- Logout -->
                    <LinearLayout
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            app:tint="#F44336" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Logout"
                            android:fontFamily="@font/seg_ui_semibold"
                            android:textColor="#F44336"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_right"
                            app:tint="#F44336" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Version Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Version 1.0.0"
                android:fontFamily="@font/seg_ui_semibold"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
