<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Post Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_post_user_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circle_background_primary"
                android:padding="10dp"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_post_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure Explorer"
                    android:textColor="#4b5563"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/seg_ui_semibold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_location"
                        app:tint="#007a33" />

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Rocky Mountain Trail"
                        android:textColor="#007a33"
                        android:textSize="12sp"
                        android:fontFamily="@font/segoe_ui_regular" />

                    <TextView
                        android:id="@+id/text_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="2h ago"
                        android:textColor="#4b5563"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Post Image -->
        <ImageView
            android:id="@+id/img_post_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_3"
            tools:src="@drawable/img_1" />

        <!-- Activity Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/activity_badge_background"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_activity_type"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_hiking"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/text_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Hiking"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/seg_ui_semibold" />

        </LinearLayout>

        <!-- Post Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/img_like_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fav"
                    app:tint="#007a33" />

                <TextView
                    android:id="@+id/text_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="24"
                    android:textColor="#4b5563"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#2c3e50" />

                <TextView
                    android:id="@+id/text_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="8"
                    android:textColor="#4b5563"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">
                <!-- Share button content -->
            </LinearLayout>
        </LinearLayout>

        <!-- Post Caption -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/text_post_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazing sunrise hike at Rocky Mountain! The view from the summit was absolutely breathtaking. 🏔️ #hiking #adventure #nature"
                android:textColor="#4b5563"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/seg_ui_semibold"
                tools:text="Amazing sunrise hike at Rocky Mountain! The view from the summit was absolutely breathtaking. 🏔️ #hiking #adventure #nature" />

            <TextView
                android:id="@+id/text_view_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="View all comments"
                android:textColor="#007a33"
                android:textSize="12sp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:fontFamily="sans-serif" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>