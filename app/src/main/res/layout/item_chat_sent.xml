<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="end">

    <!-- Message Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="48dp"
        android:gravity="end">

        <!-- Message Bubble -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/sent_message_color"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_view_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a sent message"
                    android:fontFamily="@font/segoe_ui_regular"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.2"
                    android:maxWidth="280dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:34"
                        android:textColor="@color/sent_timestamp_color"
                        android:textSize="11sp"
                        android:layout_marginEnd="4dp" />

                    <!-- Message Status (Delivered/Read) -->
                    <ImageView
                        android:id="@+id/message_status"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check_double"
                        android:visibility="visible"
                        app:tint="@color/message_delivered_color" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>