<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#047857"
                android:endColor="#065f46"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#064e3b" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <!-- Enhanced with gradient and border for premium look -->
            <gradient
                android:startColor="#10b981"
                android:endColor="#059669"
                android:angle="135" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#047857" />
        </shape>
    </item>
</selector>
